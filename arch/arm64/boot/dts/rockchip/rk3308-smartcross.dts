/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/usb/pd.h>
#include "rk3308.dtsi" 

/ {
	model = "SmartCross System";
	compatible = "t123yh,smartcross", "rockchip,rk3308";
	chosen {
		stdout-path = "serial2:1500000n8";
	};

	aliases {
		mmc0 = &emmc;
		serial2 = &uart2;
	};

	vdd_core: vdd-core {
		compatible = "pwm-regulator";
		pwms = <&pwm0 0 5000 1>;
		regulator-name = "vdd_core";
		regulator-min-microvolt = <827000>;
		regulator-max-microvolt = <1340000>;
		regulator-init-microvolt = <1015000>;
		regulator-always-on;
		regulator-boot-on;
		regulator-settling-time-up-us = <250>;
		status = "okay";
	};

	vcc_io: vcc-io {
		compatible = "regulator-fixed";
		regulator-name = "vcc_3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
		regulator-boot-on;
	};

	vcc_host_vbus: host-vbus-regulator {
		compatible = "regulator-fixed";
		enable-active-high;
		gpio = <&gpio0 RK_PC5 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&host_vbus_drv>;
		regulator-name = "vcc_host_vbus";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		status = "okay";

		status-led {
			label = "smartcross:blue:status";
			gpios = <&gpio1 RK_PC4 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
			default-state = "on";
		};
	};

	sound-output {
		status = "okay";
		compatible = "simple-audio-card";
		simple-audio-card,name = "SmartCross";

		#address-cells = <1>;
		#size-cells = <0>;

        simple-audio-card,dai-link@0 {
            reg = <0>;
            format = "i2s";
            cpu {
                sound-dai = <&i2s_8ch_0 0>;
            };
            codec {
                sound-dai = <&smartcross_dac 0>;
            };
        };
        simple-audio-card,dai-link@1 {
            reg = <1>;
            format = "i2s";
            cpu {
                sound-dai = <&i2s_8ch_0 0>;
            };
            codec {
                sound-dai = <&smartcross_dac 1>;
            };
        };
        simple-audio-card,dai-link@2 {
            reg = <2>;
            format = "i2s";
            cpu {
                sound-dai = <&i2s_8ch_0 0>;
            };
            codec {
                sound-dai = <&smartcross_dac 2>;
            };
        };
        simple-audio-card,dai-link@3 {
            reg = <3>;
            format = "i2s";
            cpu {
                sound-dai = <&i2s_8ch_0 0>;
            };
            codec {
                sound-dai = <&smartcross_dac 3>;
            };
        };
	};

	sound-spdif-rx {
		status = "okay";
		compatible = "simple-audio-card";
		simple-audio-card,name = "SPDIFReceiver";
		simple-audio-card,format = "i2s";
        simple-audio-card,bitclock-master = <&spdif_input>;
        simple-audio-card,frame-master = <&spdif_input>;

		simple-audio-card,cpu {
			sound-dai = <&i2s_2ch_0>;
		};
		simple-audio-card,codec {
			sound-dai = <&spdif_input>;
		};
	};



	smartcross_dac: smartcross-dac {
		#sound-dai-cells = <1>;
		compatible = "smartcross,dac-complex";
		pinctrl-names = "default";
		pinctrl-0 = <&amp_pin_ctrl>;
		mute-gpios = <&gpio2 RK_PC0 GPIO_ACTIVE_HIGH>;
		enable-gpios = <&gpio2 RK_PB7 GPIO_ACTIVE_HIGH>;
		i2c-bus = <&i2c0>;
		ma120x0p,default-pmp = <2>;
	};
	
	i2s_mclk: fixed-24576 {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <24576000>;
		clock-accuracy = <20000>;
		clock-output-names = "mclk_i2s0_8ch_in";
	};
};

&pinctrl {
	amps {
		amp_pin_ctrl: amp-ctrl {
			rockchip,pins =
				<2 RK_PB7 0 &pcfg_pull_none_8ma>,
				<2 RK_PC0 0 &pcfg_pull_none_8ma>;
		};
	};

	display-pins {
		display_pin_ctrl: display-pin-ctrl {
			// DC pin
			rockchip,pins = <2 RK_PA0 0 &pcfg_pull_none_8ma>;
		};
	};
};

&i2s_8ch_0 {
	#sound-dai-cells = <1>;
	pinctrl-names = "default";
	pinctrl-0 = <&i2s_8ch_0_sclktx
				&i2s_8ch_0_lrcktx
				&i2s_8ch_0_sdo0
				&i2s_8ch_0_sdo1
				&i2s_8ch_0_sdo2
				&i2s_8ch_0_mclk
				&i2s_8ch_0_sdo3>;

	clocks = <&cru SCLK_I2S0_8CH_TX>, <&cru SCLK_I2S0_8CH_RX>, <&cru HCLK_I2S0_8CH>;
	clock-names = "mclk_tx", "mclk_rx", "hclk";

	assigned-clocks = <&cru SCLK_I2S0_8CH_TX_MUX>;
	assigned-clock-parents = <&i2s_mclk>;

	status = "okay";
};

&i2c0 {
	status = "okay";

	current_sensor: ina3221@42 {
		compatible = "ti,ina3221";
		reg = <0x42>;
		#address-cells = <1>;
		#size-cells = <0>;
		input_1 {
			reg = <0x0>;
			label = "VIN";
			shunt-resistor-micro-ohms = <12000>;
		};
		input_2 {
			reg = <0x1>;
			label = "5V_A";
			shunt-resistor-micro-ohms = <12000>;
		};
		input_3 {
			reg = <0x2>;
			label = "5V_D";
			shunt-resistor-micro-ohms = <12000>;
		};
	};
};

&i2c1 {
	status = "okay";

	spdif_input: cs8416@13 {
		#sound-dai-cells = <0>;
		reg = <0x13>;
		compatible = "cirrus,cs8416";
		reset-gpios = <&gpio4 RK_PD1 GPIO_ACTIVE_HIGH>;
		irq-gpios = <&gpio4 RK_PD0 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&cs8416_pins>;
		cirrus,gpio1-sel = <0x2>; // interrupt
		clocks = <&i2s_mclk>;
		clock-names = "omck";
	};

	frontpanel: fpctrl@22 {
		#sound-dai-cells = <0>;
		reg = <0x22>;
		compatible = "smartcross,fpctl-v1";
		irq-gpios = <&gpio0 RK_PC0 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&fpctl_irq_pin>;
	};
};

&cpu0 {
	cpu-supply = <&vdd_core>;
};

&i2s_2ch_0 {
	#sound-dai-cells = <0>;
	status = "okay";
};

&emmc {
	bus-width = <8>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	supports-emmc;
	disable-wp;
	non-removable;
	num-slots = <1>;
	status = "okay";
};

&pinctrl {
	pinctrl-names = "default";

	usb {
		host_vbus_drv: host-vbus-drv {
			rockchip,pins = <0 RK_PC5 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	spdifrx-pins {
		cs8416_pins: cs8416-pins {
			rockchip,pins = <4 RK_PD1 RK_FUNC_GPIO &pcfg_pull_down>, <4 RK_PD0 RK_FUNC_GPIO &pcfg_pull_down>;
		};
	};

	fpctl-pins {
		fpctl_irq_pin: fpctl-pins {
			rockchip,pins = <0 RK_PC0 RK_FUNC_GPIO &pcfg_pull_down>;
		};
	};
};

&pwm0 {
	status = "okay";
	pinctrl-names = "active";
	pinctrl-0 = <&pwm0_pin_pull_down>;
};

&u2phy {
	status = "okay";

	u2phy_host: host-port {
		status = "okay";
		phy-supply = <&vcc_host_vbus>;
	};

	u2phy_otg: otg-port {
		status = "okay";
	};
};

&usb20_otg {
	dr_mode = "peripheral";
	status = "okay";
};

&usb_host_ehci {
	status = "okay";
};

&usb_host_ohci{
	status = "okay";
};

&uart2 {
        status = "okay";
        pinctrl-names = "default";
        pinctrl-0 = <&uart2m1_xfer>;
};

&spi0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_clk &spi0_csn0 &spi0_mosi>;

	spi-display@0{
		compatible = "smartcross,spi-lcd";
		reg = <0>;
		spi-max-frequency = <60000000>;
		pinctrl-names = "default";
		pinctrl-0 = <&display_pin_ctrl>;
		dc-gpios = <&gpio2 RK_PA0 GPIO_ACTIVE_HIGH>;
		rotation = <90>;
		backlight = <&frontpanel>;
	};
};

&wdt {
        status = "okay";
};

